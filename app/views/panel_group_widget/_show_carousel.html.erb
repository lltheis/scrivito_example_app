<div id="<%= id %>" class="carousel slide" data-ride="carousel" data-interval="false">
  <ol class="carousel-indicators">
    <% widget.panels.each_with_index do |panel, i| %>
      <li data-target="#<%= id %>" data-slide-to="<%= i %>" class="<%= "active" if i == 0 %>"></li>
    <% end %>
  </ol>

  <div class="carousel-inner" role="listbox">
    <% widget.panels.each_with_index do |panel, i| %>
      <div class="item <%= "active" if i == 0 %> <%= "min-height-200" if scrivito_in_editable_view? %>">
        <%= scrivito_tag(:div, panel, :content) %>
        <div class="carousel-caption"><%= scrivito_tag(:h3, panel, :title) %></div>
      </div>
    <% end %>
  </div>

  <a class="left carousel-control" href="#<%= id %>" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#<%= id %>" role="button" data-slide="next">
    <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
