<%= scrivito_medium_dialog do %>
  <%= scrivito_details_for "Project Title" do %>
    <%= scrivito_tag :div, @obj, :project_title %>
  <% end %>

	<%= scrivito_details_for "Sort Order" do %>
    <%= scrivito_tag :div, @obj, :sort_order  %>
  <% end %>

	<%= scrivito_details_for("Tags") do %>
	  <%= scrivito_tag(:div, @obj, :tags) %>
	<% end %>

	<%= scrivito_details_for("Display Breadcrumb and Title on Top of Page") do %>
	  <%= scrivito_tag(:div, @obj, :display_breadcrumb_and_title) %>
	<% end %>

	<%= scrivito_details_for("Permalink") do %>
	  <%= scrivito_tag(:div, @obj, :_permalink) %>
	<% end %>

	<%= scrivito_details_for("Object Path") do %>
	  <%= scrivito_tag(:div, @obj, :_path) %>
	<% end %>

	<%= scrivito_details_for("Object Type") do %>
	  <%= @obj.class.name %>
	<% end %>

	<%= scrivito_details_for("Last changed") do %>
	  <%= @obj.last_changed %>
	<% end %>

	<%= scrivito_details_for("ID") do %>
	  <%= @obj.id %>
	<% end %>

	<%= scrivito_details_for("URL") do %>
	  <%= scrivito_url(@obj) %>
	<% end %>

<% end %>
